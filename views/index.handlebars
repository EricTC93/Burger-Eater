<div class="container">
	<div class="row text-center">
		<img src="/assets/img/burger.png" alt="burgerImg">
		<h1> Burger Eater </h1>
	</div>

	<div class="row text-center">
		<div class="col-md-8 text-center">
			<ul>
				{{#each burgers}}
				{{#unless this.devoured}}
				<li>
					<form action="/{{this.id}}?_method=PUT" method="POST">
						<div class="form-group form-inline">
							<label>{{this.id}} {{this.burger_name}}</label>
							<input type="hidden" name="devoured" value="true">
							<button class="btn btn-warning">DEVOUR</button>
						</div>
					</form>
				</li>
				{{/unless}}
  				{{/each}}
			</ul>
		</div>

		<div class="col-md-3">
			<ul>
				{{#each burgers}}
				{{#if this.devoured}}
				<li> <p>{{this.burger_name}}</p> </li>
				{{/if}}
  				{{/each}}
			</ul>
		</div>
	</div>

	<div class="row text-center">
		<form action="/" method="POST">
			<div class="form-group">
				<textarea class="form-control" rows="1" id="burger_name" name="burger_name"></textarea>
			</div>

			<button class="btn btn-primary" id="submit" type="submit">Submit</button>

		</form>
	</div>
</div>